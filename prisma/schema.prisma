enum RoomType {
  INVALID
  KITCHEN
  LIVING_ROOM
  BEDROOM
  BATHROOM
  DINING_ROOM
  HALLWAY
  OFFICE
}

model Plant {
  id String @id @default(uuid())

  name   String
  Room   Room?   @relation(fields: [roomId], references: [id])
  roomId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Room {
  id String @id @default(uuid())

  name   String
  type   RoomType
  plants Plant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

