enum RoomType {
  KITCHEN
  LIVING_ROOM
  BEDROOM
  BATHROOM
  DINING_ROOM
  HALLWAY
  OFFICE
  OTHER
}

// !: Add succulents etc.
enum PlantType {
  CAST_IRON_PLANT
  ARROWHEAD_VINE
  CALATHEA
  CALATHEA_ORNATA
  CHINESE_EVERGREEN
  CORN_PLANT
  DRACAENA_MARGINATA
  ENGLISH_IVY
  HOYA
  JADE_PLANT
  MONEY_PLANT
  MONSTERA_DELICIOSA
  ORCHID
  PEACE_LILY
  PEPEROMIA
  PHILODENDRON
  PONYTAIL_PALM
  RUBBER_PLANT
  SNAKE_PLANT
  SPIDER_PLANT
  STAGHORN_FERN
  STRING_OF_HEARTS
  STRING_OF_PEARLS
  YUCCA_PLANT
  ZZ_PLANT
}

model Plant {
  id String @id @default(uuid())

  name   String
  Room   Room   @relation(fields: [roomId], references: [id])
  roomId String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Room {
  id String @id @default(uuid())

  name   String
  type   RoomType
  plants Plant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

